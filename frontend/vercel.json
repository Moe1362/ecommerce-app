{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      },
      {
        "source": "/uploads/(.*)",
        "destination": "/uploads/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist"
  }